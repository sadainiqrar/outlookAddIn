
<Page
    x:Class="Office365Plugin.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:common="using:Office365Plugin.Common"
    mc:Ignorable="d">

    <Page.Resources>
        <common:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
    </Page.Resources>


    <Grid Name="aGrid" Background="Black">
        <Grid.RowDefinitions>
            <RowDefinition Height="90"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Border Grid.Row="0" Background="Black">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Image Grid.Column="0" Source="Assets/Logo.scale-100.png" Height="70" Margin="10,0,40,0"/>
                <TextBlock x:Name="appTitle" Grid.Column="2" Text="Office 365 Plugin" 
                       HorizontalAlignment="Center" 
                       VerticalAlignment="Center" 
                       Style="{StaticResource HeaderTextBlockStyle}"
                       />
                <StackPanel Grid.Column="4" Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button  Command="{Binding ToggleSignInCommand}" Content="{Binding LogOnCaption}" VerticalAlignment="Bottom" Margin="0,0,15,15" />
                    <Image Source="{Binding Avatar}" Height="50" Margin="10,0,0,0"/>
                    <StackPanel Margin="20,0,20,15" VerticalAlignment="Bottom">
                        <TextBlock Text="{Binding DisplayName}" Margin="0,10,0,0"/>
                        <TextBlock Text="{Binding JobTitle}" Margin="0,10,0,0"/>
                    </StackPanel>
                </StackPanel>
            </Grid>

        </Border>
        <Grid Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="202*"/>
                <ColumnDefinition Width="Auto" MinWidth="737"/>
                <ColumnDefinition Width="24*"/>
                <ColumnDefinition Width="403*"/>
            </Grid.ColumnDefinitions>
            <ProgressBar 
                     Visibility="{Binding IsBusy, Converter={StaticResource BooleanToVisibilityConverter}}"
                     Grid.Row="0" Grid.ColumnSpan="3" VerticalAlignment="Top" Margin="31,10,233,0"  IsIndeterminate="True" Grid.Column="1" Height="6"/>

            <StackPanel Grid.Row="1" Grid.Column="1" Margin="31,0,0,0"/>
            <Button x:ConnectionId='0' 
            	x:Name="Mail_Button" 
            	HorizontalAlignment="Center" 
            	VerticalAlignment="Center" 
            	                          
            	IsEnabled="{Binding SignedIn}"
            	Margin="28,-1,542,425" Grid.Row="1" Height="155" Width="167" Grid.Column="1">
                <StackPanel>
                    <Image Source="../Assets/EmailIcon.png" Height="100" Margin="10,0"/>
                    <TextBlock x:ConnectionId='0'  Text="mail"  Style="{StaticResource SubheaderTextBlockStyle}" HorizontalAlignment="Center" Margin="0,0,0,5"                                              />
                </StackPanel>
            </Button>
            <Button x:ConnectionId='0' x:Name="Contacts_Button" 
                 
            	HorizontalAlignment="Left"  
            	VerticalAlignment="Center"  
            	                              
            	IsEnabled="{Binding SignedIn}" 
            	Margin="28,169,0,257" Grid.Row="1" Grid.Column="1" Width="167">
                <StackPanel>
                    <Image Source="../Assets/ContactsIcon.png" Height="100" Margin="10,0"/>
                    <TextBlock  Text="contacts"  Style="{StaticResource SubheaderTextBlockStyle}" HorizontalAlignment="Center" Margin="0,0,0,5"/>
                </StackPanel>
            </Button>
            <Button x:ConnectionId='0' 
            	x:Name="MyFiles_Button" 
            	HorizontalAlignment="Center" 
            	VerticalAlignment="Center" 
            	                             
            	IsEnabled="{Binding SignedIn}"
            	Margin="304,169,267,257" Grid.Row="1" Grid.Column="1" Width="166">
                <StackPanel>
                    <Image Source="../Assets/MyFilesIcon.png" Height="100" Margin="10,0"/>
                    <TextBlock  Text="files"  Style="{StaticResource SubheaderTextBlockStyle}" HorizontalAlignment="Center" Margin="0,0,0,5"/>
                </StackPanel>
            </Button>
            <Button x:ConnectionId='0' x:Name="Calendar_Button" 
                 
            	HorizontalAlignment="Center"  
            	VerticalAlignment="Center"  
            	                              
            	IsEnabled="{Binding SignedIn}" 
            	Margin="304,1,267,425" Grid.Row="1" Grid.Column="1" Width="166">
                <StackPanel>
                    <Image  Source="../Assets/CalendarIcon.png" Height="100" Margin="10,0"/>
                    <TextBlock  Text="calendar"  Style="{StaticResource SubheaderTextBlockStyle}" HorizontalAlignment="Center" Margin="0,0,0,5"/>
                </StackPanel>
            </Button>

        </Grid>

    </Grid>
</Page>

